<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.G22" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="elevationOverlayEnabled">false</item>
        <item name="colorPrimarySurface">#3D3A3A</item>
        <item name="colorSurface">#3D3A3A</item>
        <item name="colorOnPrimarySurface">@color/white</item>

        <item name="android:itemTextAppearance">@style/ItemTextAppearance</item>

    </style>

    <style name="ItemTextAppearance">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>
</resources>